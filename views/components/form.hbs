
{{#if url}}
<form action="/editar/{{url._id}}" method="post">

<input value="{{url.origin}}" class="form-control my-2" type="text" placeholder="ingrese url" name="origin">
<button class="btn btn-warning w-100 mb-2" type="submit">Editar URL</button>
</form>

{{else}}

<form action="/" method="post">

<input class="form-control my-2" type="text" placeholder="ingrese url" name="origin">
<button class="btn btn-primary w-100 mb-2" type="submit">Agregar URL</button>
</form>
{{/if}}
